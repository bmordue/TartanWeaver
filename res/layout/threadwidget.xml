<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="fill_parent"
	android:layout_height="wrap_content" androidbackground="#00000000"
	android:id="@+id/threadwidget_root">

	<Button android:id="@+id/colourpicker" android:text="Colrs"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		 />


	<SeekBar android:id="@+id/slider" android:layout_height="wrap_content"
		android:layout_width="150dip" android:layout_toRightOf="@id/colourpicker" 
		android:max="100"/>
	
	<Button android:id="@+id/addwidget" android:layout_height="wrap_content" 
	android:layout_width="wrap_content" android:layout_toRightOf="@id/slider"
	android:text="+"  android:visibility="gone"/>
	
		
	<Button android:id="@+id/removewidget" android:layout_height="wrap_content" 
	android:layout_width="wrap_content" android:layout_toRightOf="@id/addwidget"
	android:text="x"  android:visibility="gone"/>
		
</RelativeLayout> 